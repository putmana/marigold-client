{
  "name": "marigold",
  "version": "0.0.1",
  "scripts": {
    "dev": "cd apps/client && vite dev",
    "build": "cd apps/client && vite build",
    "ui:package": "cd packages/ui && npm run package",
    "ui:dev": "cd packages/ui && npm run dev",
    "preview": "cd apps/client && vite preview",
    "check": "cd apps/client && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
