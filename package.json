  },
  "devDependencies": {
    "@fontsource/fira-mono": "^4.5.10",
    "@neoconfetti/svelte": "^1.0.0",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.5.0",
    "@types/cookie": "^0.5.1",
    "@types/uuid": "^9.0.1",
    "supabase": "^1.110.1",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.2.0"
  },
  "type": "module",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "@sveltejs/adapter-node": "^1.2.4",
    "axios": "^1.3.5",
    "buffer": "^6.0.3",
    "eslint": "^8.49.0",
    "eventsource": "^2.0.2",
    "marigold-ui": "^0.0.3",
    "music-metadata-browser": "^2.5.10",
